                    <GradientStop Offset="0.9" Color="#C8A9EB58"></GradientStop>
                    <GradientStop Offset="1" Color="#D1FFFFFF"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
