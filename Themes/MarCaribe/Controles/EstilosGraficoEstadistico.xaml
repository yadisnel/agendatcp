<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../EstilosComunes.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!--  ESTILO  DEL BORDE GRAFICO ESTADISTICO -->
    <Style  x:Key="EstiloBordeGraficoEstadistico"  TargetType="{x:Type Border}" >
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="BorderBrush" Value="#FF4779C0" />
        <Setter Property="Margin" Value="0,5,0,0" />
        <Setter Property="CornerRadius" Value="4,4,4,4" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,1">
                    <GradientStop Offset="0" Color="#D1FFFFFF"></GradientStop>
                    <GradientStop Offset="0.02" Color="#FFD2DFEE"></GradientStop>
                    <GradientStop Offset="0.98" Color="#FFD2DFEE"></GradientStop>
                    <GradientStop Offset="1" Color="#D1FFFFFF"></GradientStop>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  ESTILO  DEL BORDE INTERIOR GRAFICO ESTADISTICO -->
    <Style  x:Key="EstiloBordeInteriorGraficoEstadistico"  TargetType="{x:Type Border}" >
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />        
        <Setter Property="CornerRadius" Value="4,4,4,4" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#FF4779C0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Background" Value="White"/>
    </Style>
