            </Border.Effect>
        </Border>-->
        <StackPanel Name="StackPanelContenedor" Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Height="Auto" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="0,0,0,0">
            
