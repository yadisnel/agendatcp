<UserControl x:Class="Agenda.Controles.ControlSeparadorHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="2" Width="Auto" SnapsToDevicePixels="True" DataContext="{Binding RelativeSource={RelativeSource Self}}">    
            <Grid Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >       
                <Border Name="BordeUnico" Height="2" BorderThickness="0" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="Auto">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                            <GradientStop Offset="1" Color="White"/>
                            <GradientStop Color="#FF83A2C8"/>
                            <GradientStop Color="#FF83A2C8" Offset="0.5"/>
                            <GradientStop Color="White" Offset="0.5001"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
            </Grid>      
</UserControl> 
