                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>           
            
            <ComboBox Name="ComboBoxProvincias" Grid.Column="0" Margin="20,0,0,0" VerticalAlignment="Stretch"/>
            <ComboBox Name="ComboBoxMunicipios"   Grid.Column="1" Margin="20,0,10,0" VerticalAlignment="Stretch"/>
